<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Stats row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:gravity="center"
            android:background="@drawable/bg_card" android:padding="12dp" android:layout_marginEnd="6dp">
            <TextView android:id="@+id/tv_active_count" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="0" android:textSize="22sp"
                android:textStyle="bold" android:textColor="#1E293B" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Active" android:textSize="11sp" android:textColor="#64748B" />
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:gravity="center"
            android:background="@drawable/bg_card" android:padding="12dp" android:layout_marginHorizontal="3dp">
            <TextView android:id="@+id/tv_done_count" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="0" android:textSize="22sp"
                android:textStyle="bold" android:textColor="#22C55E" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Done" android:textSize="11sp" android:textColor="#64748B" />
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:gravity="center"
            android:background="@drawable/bg_card" android:padding="12dp" android:layout_marginStart="6dp">
            <TextView android:id="@+id/tv_postponed_count" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="0" android:textSize="22sp"
                android:textStyle="bold" android:textColor="#F59E0B" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Postponed" android:textSize="11sp" android:textColor="#64748B" />
        </LinearLayout>
    </LinearLayout>

    <!-- Filter chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="12dp">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            xmlns:app="http://schemas.android.com/apk/res-auto" />
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />
</LinearLayout>
